<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="gamves.com.gamvesparents.activities.MainActivity">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/feed_progress_balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fan_page_list"
        android:layout_alignTop="@+id/fan_page_list"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="visible"
        app:indicator="BallPulse"
        app:indicator_color="@color/half_black"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/feed_list"
        android:orientation="vertical"/>

</FrameLayout>